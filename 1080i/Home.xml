<?xml version="1.0" encoding="UTF-8"?>
<!-- Velos -->
<window id="0">
	<defaultcontrol always="true">9000</defaultcontrol>
	<animation effect="fade" time="200">WindowOpen</animation>
    <animation effect="fade" time="200">WindowClose</animation>
	<allowoverlay>yes</allowoverlay>

	<controls>

		<include>GlobalBackground</include>
		<include>TimeDate</include>
		
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>450</width>
			<height>100</height>
			<texture>VelosLogo.png</texture>
			<visible>!Skin.HasSetting(DisableSkinLogo)</visible>
		</control>
		
		<control type="group">
		<posy>512</posy>
		
			<control type="group" id="9001">
				<posx>500</posx>
				<posy>0</posy>
				<onup>9000</onup>
				<ondown>9000</ondown>
				<control type="grouplist" id="9010">
					<include>SubMenuValues</include>
					<onleft>9010</onleft>
					<onright>9010</onright>
					<visible>Container(9000).HasFocus(2)</visible>
					<include>SubMenuVideos</include>
				</control>
				<control type="grouplist" id="9016">
					<include>SubMenuValues</include>
					<onleft>9016</onleft>
					<onright>9016</onright>
					<visible>Container(9000).HasFocus(5)</visible>
					<include>SubMenuMovies</include>
				</control>
				<control type="grouplist" id="9017">
					<include>SubMenuValues</include>
					<onleft>9017</onleft>
					<onright>9017</onright>
					<visible>Container(9000).HasFocus(6)</visible>
					<include>SubMenuTV</include>
				</control>
				<control type="grouplist" id="9011">
					<include>SubMenuValues</include>
					<onleft>9011</onleft>
					<onright>9011</onright>
					<visible>Container(9000).HasFocus(3)</visible>
					<include>SubMenuMusic</include>
				</control>
				<control type="grouplist" id="9012">
					<include>SubMenuValues</include>
					<onleft>9012</onleft>
					<onright>9012</onright>
					<visible>Container(9000).HasFocus(11)</visible>
					<include>SubMenuSystem</include>
				</control>
				<control type="grouplist" id="9013">
					<include>SubMenuValues</include>
					<onleft>9013</onleft>
					<onright>9013</onright>
					<visible>Container(9000).HasFocus(13)</visible>
					<include>SubMenuPlayDisc</include> 
				</control>
				<!--<control type="grouplist" id="9014">
					<include>SubMenuValues</include>
					<onleft>9014</onleft>
					<onright>9014</onright>
					<visible>Container(9000).HasFocus(12)</visible>
					<include>SubMenuLiveTV</include>
				</control>-->
				<control type="grouplist" id="9015">
					<include>SubMenuValues</include>
					<onleft>9013</onleft>
					<onright>9013</onright>
					<visible>Container(9000).HasFocus(4)</visible>
					<include>SubMenuPictures</include>
				</control>
			</control>
		</control>

		<control type="wraplist" id="9000">
			<description>Home Wraplist</description>
			<posx>0</posx>
			<posy>108</posy>
			<width>450</width>
			<height>846</height>
			<onup>9000</onup>
			<ondown>9000</ondown>
			<onleft>300</onleft>
			<onright>9001</onright>
			<focusposition>5</focusposition>
			<scrolltime>200</scrolltime>

			<itemlayout width="540" height="75">

				<control type="label">
					<posx>450</posx>
					<height>75</height>
					<width>425</width>
					<font>Home</font>
					<label>$INFO[ListItem.Label]</label>
					<textcolor>Grey</textcolor>
					<align>right</align>
				</control>

			</itemlayout>

			<focusedlayout width="810" height="96">

				<control type="label">
					<posx>450</posx>
					<width>425</width>
					<height>96</height>
					<label>$INFO[ListItem.Label]</label>
					<font>Home</font>
					<textcolor>White</textcolor>
					<align>right</align>
				</control>

			</focusedlayout>
		
			<content>

				<item id="1">
					<description>Programs</description>
					<label>31002</label>
					<onclick>ActivateWindow(Programs,Addons)</onclick>
				</item>

				<item id="2">
					<description>Videos</description>
					<label>31003</label>
					<onclick>ActivateWindow(Video,Files)</onclick>
				</item>
				
				<item id="14">
					<description>PlayOn UPNP Server</description>
					<label>PLAYON</label>
					<onclick>ActivateWindow(10024, upnp://7e4cb587-4dbc-455a-8424-e29cf9563f6e/)</onclick>
				</item>
				
				<item id="15">
					<description>PseudoTV</description>
					<label>PSEUDOTV</label>
					<onclick>RunScript(script.pseudotv)</onclick>
					<visible>System.HasAddon(script.pseudotv)</visible>
				</item>

				<item id="3">
					<description>Music</description>
					<label>31004</label>
					<onclick>ActivateWindow(Music,return)</onclick>
				</item>

				<item id="4">
					<description>Pictures</description>
					<label>31005</label>
					<onclick>ActivateWindow(Pictures,return)</onclick>
				</item>

				<item id="5">
					<description>Movies</description>
					<label>31006</label>
					<onclick>ActivateWindow(Video,movietitles,return)</onclick>
					<visible>Library.HasContent(Movies)</visible>
				</item>

				<item id="6">
					<description>TV Shows</description>
					<label>31007</label>
					<onclick>ActivateWindow(Video,tvshowtitles,return)</onclick>
					<visible>Library.HasContent(TVShows)</visible>
				</item>

				<item id="7">
					<description>Favourites</description>
					<label>31008</label>
					<onclick>ActivateWindow(Favourites)</onclick>
				</item>

				<item id="8">
					<description>Profiles</description>
					<label>31009</label>
					<onclick>ActivateWindow(Profiles)</onclick>
				</item>

				<item id="9">
					<description>Weather</description>
					<label>31010</label>
					<onclick>ActivateWindow(weather)</onclick>
				</item>

				<item id="10">
					<description>File manager</description>
					<label>31011</label>
					<onclick>ActivateWindow(filemanager)</onclick>
				</item>

				<item id="11">
					<description>Settings</description>
					<label>31012</label>
					<onclick>ActivateWindow(settings)</onclick>
				</item>

				<item id="12">
					<description>Shutdown</description>
					<label>31013</label>
					<onclick>ActivateWindow(shutdownmenu)</onclick>
				</item>

				<item id="13">
					<description>Play Disc</description>
					<label>31014</label>
					<onclick>PlayDVD</onclick>
					<visible>System.HasMediadvd</visible>
				</item>

			</content>

		</control>
		
		<!-- HOME ICONS -->
		<control type="image">
			<posx>960</posx>
			<posy>300</posy>
			<width>512</width>
			<height>512</height>
			<texture>$VAR[HomeMenuIcons]</texture>
			<fadetime>200</fadetime>
			<visible>!Skin.HasSetting(DisableIcons)</visible>
		</control>
		
		<!-- RSS Background -->
		<control type="image">
			<posx>0</posx>
			<posy>1020</posy>
			<width>1920</width>
			<height>48</height>
			<texture>other_textures/white-back.png</texture>
			<visible>system.getbool(lookandfeel.enablerssfeeds)</visible>
		</control>
		
		<!-- RSS Icon -->
		<control type="image">
			<posx>0</posx>
			<posy>1020</posy>
			<width>48</width>
			<height>48</height>
			<texture>home_textures/RSS.png</texture>
			<visible>system.getbool(lookandfeel.enablerssfeeds)</visible>
		</control>

		<control type="rss">
			<posx>48</posx>
			<posy>1025</posy>
			<width>1885</width>
			<height>21</height>
			<font>Medium</font>
			<urlset>1</urlset>
			<titlecolor>Cyan</titlecolor>
			<headlinecolor>DarkGrey</headlinecolor>
			<textcolor>Cyan</textcolor>
		</control>

	</controls>

</window>