<?xml version="1.0" encoding="utf-8"?>
<!-- Velos -->
<includes>

	<include name="Splash">
	
		<include>GlobalBackground</include>
	
		<control type="group">
			
			<include>Dimensions_Fullscreen</include>
		
			<animation type="WindowOpen">
				<effect type="fade" start="100" end="100" time="2000" />
				<effect type="fade" start="100" end="0" time="2000" delay="2000" />
			</animation>
			
			<animation type="WindowClose">
				<effect type="fade" start="0" end="0" time="100" />
			</animation>
			
			<control type="image">
				<animation type="WindowOpen">
					<effect type="fade" start="0" end="100" time="400" delay="200" />
				</animation>
				<include>Dimensions_Fullscreen</include>
				<texture>$VAR[SplashScreen]</texture>
			</control>
		
		</control>
	
	</include>

</includes>