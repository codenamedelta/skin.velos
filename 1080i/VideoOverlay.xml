<?xml version="1.0" encoding="UTF-8"?>
<!-- Velos -->
<window id="2904">
	<defaultcontrol always="true">2</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<controls>

		<control type="group">
			<posx>0</posx>
			<posy>0</posy>

			<control type="group">

				<visible>!VideoPlayer.IsFullscreen + !Window.IsVisible(screencalibration)</visible>

				<control type="label">
					<description>Now Playing Info</description>
					<posx>32</posx>
					<posy>975</posy>
					<width>1000</width>
					<font>Medium</font>
					<textcolor>White</textcolor>
					<label>[COLOR=Cyan]$LOCALIZE[31047][/COLOR] $INFO[VideoPlayer.TVShowTitle,, - ]$INFO[VideoPlayer.Title]</label>
					<scroll>true</scroll>
				</control>

			</control>

		</control>

	</controls>

</window>