<?xml version="1.0" encoding="UTF-8"?>
<!-- Velos -->
<window>
	<onload condition="System.HasAddon(script.tvtunes)">RunScript(script.tvtunes,backend=True)</onload>
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<views>50</views>
	

	<controls>

		<control type="radiobutton" id="19">
			<description>Filter (hidden)</description>
			<include>HiddenButton</include>
		</control>
		<control type="button" id="9900"><!-- no info-->
            <include>HiddenButton</include>
            <visible>!Container.Content()</visible>
            <visible>!SubString(ListItem.Path,videodb://1/7/,left)</visible>
            <visible>!SubString(Container.FolderPath,library://,left)</visible>
            <visible>!Stringcompare(ListItem.Label,..)</visible>
            <visible>!Container.Content(years)</visible>
            <visible>!Container.Content(genres)</visible>
            <visible>!Container.Content(studios)</visible>
            <visible>!Container.Content(countries)</visible>
        </control>

		<include>GlobalBackground</include>
		<include>View_50_List</include>
		<include>TimeDate</include>
		
		<control type="image">
			<description>background image</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>375</width>
			<height>1080</height>
			<texture border="22">other_textures/DialogContextBack.png</texture>
			<animation type="Conditional" condition="!ControlGroup(9000).HasFocus()">
				<effect type="slide" start="1545" end="1920" time="200"/>
			</animation>
		</control>

		<control type="grouplist" id="9000">
			<posx>0</posx>
			<posy>200</posy>
			<width>375</width>
			<itemgap>0</itemgap>
			<onleft>50</onleft>
			<onright>50</onright>
			<onup>9000</onup>
			<ondown>9000</ondown>
			<orientation>vertical</orientation>
			<animation type="Conditional" condition="!ControlGroup(9000).HasFocus()">
				<effect type="slide" start="1545" end="1920" time="200"/>
			</animation>

			<control type="button" id="2">
				<description>View</description>
				<width>375</width>
				<align>left</align>
			</control>

			<control type="button" id="3">
				<description>Sort</description>
				<width>375</width>
				<align>left</align>
			</control>

			<control type="togglebutton" id="4">
				<description>Ascending</description>
				<width>375</width>
				<align>left</align>
				<label>584</label>
				<altlabel>585</altlabel>
			</control>

			<control type="button" id="5">
				<description>Files</description>
				<width>375</width>
				<align>left</align>
				<label>31001</label>
				<onclick>SetFocus(50)</onclick>
			</control>

			<control type="radiobutton" id="7">
				<description>Stack</description>
				<width>375</width>
				<align>left</align>
				<label>14000</label>
				<altlabel>14001</altlabel>
			</control>

			<control type="button" id="8">
				<description>Search</description>
				<width>375</width>
				<align>left</align>
				<label>137</label>
			</control>
			
			<control type="button" id="10">
				<description>Watched</description>
				<width>375</width>
				<align>left</align>
				<label>137</label>
			</control>

			<control type="radiobutton" id="11">
				<description>Unlock Shares</description>
				<width>375</width>
				<align>left</align>
				<label>20336</label>
				<onclick>xbmc.mastermode</onclick>
				<selected>system.ismaster</selected>
				<visible>system.haslocks</visible>
			</control>

			<control type="radiobutton" id="16">
				<description>PartyMode</description>
				<width>375</width>
				<align>left</align>
				<label>589</label>
			</control>

			<control type="radiobutton" id="17">
				<description>Flatten</description>
				<width>375</width>
				<align>left</align>
				<label>20411</label>
			</control>
			
			<control type="button" id="21">
				<description>Activate Filter</description>
				<width>375</width>
				<align>left</align>
				<label>587</label>
				<onclick>SendClick(videolibrary,19)</onclick>
				<onclick>SetFocus(22)</onclick>
				<visible>IsEmpty(Window.Property(filter))</visible>
			</control>

			<control type="button" id="22">
				<description>Show Filter Label</description>
				<width>375</width>
				<align>left</align>
				<label>$INFO[Window.Property(filter)]</label>
				<onclick>SendClick(videolibrary,19)</onclick>
				<onclick>SetFocus(21)</onclick>
				<visible>!IsEmpty(Window.Property(filter))</visible>
			</control>

			<control type="button" id="98">
				<description>Open Player Controls</description>
				<width>375</width>
				<align>left</align>
				<label>31015</label>
				<onclick>ActivateWindow(playercontrols)</onclick>
				<visible>Player.HasMedia</visible>
			</control>
			
			<!-- CONTEXT MENU FUTURE
			
			<control type="button" id="99">
				<width>375</width>
				<align>left</align>
				<label>31015</label>
				<onclick>ReplaceWindow(contextmenu,Container(id).ListItem)</onclick>
			</control>-->

		</control>

	</controls>

</window>