			</control>
			
			<control type="image">
            	<posx>1750</posx>
                <posy>8</posy>
				<width>170</width>
				<height>30</height>
                <texture>other_textures/white-back.png</texture>
				<animation effect="slide" start="500,0" time="750">WindowOpen</animation>
				<animation effect="slide" end="500,0" time="750" delay="200">WindowClose</animation>
