<?xml version="1.0" encoding="UTF-8"?>
<!-- Velos -->
<window id="115">
	<defaultcontrol always="true">901</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<visible>[Player.Seeking | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding | Window.IsVisible(videoosd)] + ![VideoPlayer.Content(livetv) | Window.IsVisible(fullscreeninfo)] + Window.IsVisible(fullscreenvideo)</visible>

	<controls>
	
		<!-- TOP BAR -->
		<control type="group">
			<posx>0</posx>
			<posy>0</posy>
			<visible>![Skin.HasSetting(CleanOSD)  | Substring(Window(10000).Property(PseudoTVRunning),True)] + [VideoPlayer.Content(movies) | VideoPlayer.Content(MusicVideos) | VideoPlayer.Content(episodes)]</visible>
			<animation effect="slide" start="0,-150" time="1000">WindowOpen</animation>
			<animation effect="slide" end="0,-150" time="1000">WindowClose</animation>

			<!-- BAR BACKGROUND COLOR -->
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>1920</width>
				<height>150</height>
				<texture>other_textures/black-back.png</texture>
				<bordertexture>other_textures/borderwhite.png</bordertexture>
				<bordersize>0,0,0,10</bordersize>
			</control>
			
		
			
			<!-- TVSHOW POSTER -->
			<control type="image">
            	<posx>1615</posx>
                <posy>25</posy>
                <width>255</width>
				<height>350</height>
                <texture background="true">$VAR[PlayerPosterVar]</texture>
                <aspectratio aligny="bottom">stretch</aspectratio>
				<bordertexture>other_textures/borderwhite.png</bordertexture>
				<bordersize>10</bordersize>
				<animation effect="slide" start="500,0" time="1250">WindowOpen</animation>
				<animation effect="slide" end="0,-500" time="1250">WindowClose</animation>
            </control>
			
			<control type="image">
            	<posx>1615</posx>
                <posy>375</posy>
				<width>255</width>
				<height>30</height>
                <texture>other_textures/white-back.png</texture>
				<animation effect="slide" start="500,0" time="1250">WindowOpen</animation>
				<animation effect="slide" end="0,-500" time="1250">WindowClose</animation>
            </control>
			
			<control type="image">
            	<posx>1682</posx>
                <posy>375</posy>
				<align>center</align>
                <texture background="true">$INFO[Player.StarRating]</texture>
				<animation effect="slide" start="500,0" time="1250">WindowOpen</animation>
				<animation effect="slide" end="0,-500" time="1250">WindowClose</animation>
            </control>	
			
			<!-- TIME AND DATE DISPLAY -->
			<include>TimeDate</include>	
			
			<!-- FLAGS (video type, resolution, aspect ratio, audio type, studio, FCC rating (tv), MPAA rating (movies), etc...) -->
			<control type="group">
            	<posx>1000</posx>
				<posy>65</posy>
				<animation effect="slide" start="500,0" time="1250">WindowOpen</animation>
				<animation effect="slide" end="0,-500" time="1250">WindowClose</animation>
				
				<control type="image">
            		<posx>0</posx>
                	<include>OSDFlagVars</include>
                	<texture fallback="flags/studios/default-studio.png">$INFO[VideoPlayer.Studio,flags/studios/,.png]</texture>
                    <visible>!VideoPlayer.Content(files)</visible>
            	</control>
            	
				<control type="image">
            		<posx>120</posx>
                	<include>OSDFlagVars</include>
                	<texture fallback="flags/aspectratio/defaultaspect.png">$INFO[VideoPlayer.VideoAspect,flags/aspectratio/,.png]</texture>
            	</control>
				
				<control type="image">
            		<posx>240</posx>
                	<include>OSDFlagVars</include>
                	<texture fallback="flags/resolution/defaultscreen.png">$INFO[VideoPlayer.VideoResolution,flags/resolution/,.png]</texture>
            	</control>
				
				<control type="image">
            		<posx>360</posx>
                	<include>OSDFlagVars</include>
                	<texture fallback="flags/source/defaultsource.png">$VAR[VideoSourceFlagVar,flags/source/,.png]</texture>
            	</control>
				
            	<control type="image">
            		<posx>480</posx>
                	<include>OSDFlagVars</include>
                	<texture fallback="flags/audio/defaultsound.png">$INFO[VideoPlayer.AudioCodec,flags/info/]$INFO[VideoPlayer.AudioChannels,,.png]</texture>
            	</control>
				
			</control>
			
		</control>

		<!-- BOTTOM BAR -->
		<control type="group">
			<posx>0</posx>
			<posy>930</posy>
			<animation effect="slide" start="0,150" time="1000">WindowOpen</animation>
			<animation effect="slide" end="0,150" time="1000">WindowClose</animation>
			
			<control type="image">
                <posx>15</posx>
				<posy>-234</posy>
                <width>345</width>
                <height>234</height>
                <texture background="true">$VAR[PlayerArtworkVar]</texture>
                <aspectratio aligny="bottom">keep</aspectratio>
				<animation effect="slide" start="0,500" time="1250">WindowOpen</animation>
				<animation effect="slide" end="0,500" time="1250">WindowClose</animation>
				<visible>![Skin.HasSetting(CleanOSD) | Substring(Window(10000).Property(PseudoTVRunning),True)] + [VideoPlayer.Content(movies) | VideoPlayer.Content(MusicVideos) | VideoPlayer.Content(episodes)]</visible>
            </control>
			
			<!-- BAR BACKGROUND COLOR -->
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>1920</width>
				<height>150</height>
				<texture>other_textures/black-back.png</texture>
				<bordertexture>other_textures/borderwhite.png</bordertexture>
				<bordersize>0,10,0,0</bordersize>
			</control>
			
			<control type="label">
				<posx>1905</posx>
				<posy>90</posy>
				<width>1920</width>
				<font>Large</font>
				<textcolor>Cyan</textcolor>
				<align>right</align>
				<label>$INFO[Player.Time]$INFO[Player.Duration, / ]</label>
			</control>

			<control type="label">
				<posx>0</posx> 
				<posy>90</posy>
				<width>1920</width>
				<font>Large</font>
				<textcolor>Cyan</textcolor>
				<align>center</align>
				<label>$LOCALIZE[31000] $INFO[Player.FinishTime]</label>
				<visible>!Player.Forwarding + !Player.Rewinding + !Player.Paused</visible>
			</control>

			<control type="label">
				<posx>0</posx>
				<posy>90</posy>
				<width>1920</width>
				<font>Large</font>
				<textcolor>Cyan</textcolor>
				<align>center</align>
				<label>[UPPERCASE]$LOCALIZE[112][/UPPERCASE]</label>
				<visible>player.paused</visible>
			</control>

			<control type="label">
				<posx>0</posx>
				<posy>90</posy>
				<width>1920</width>
				<font>Large</font>
				<textcolor>Cyan</textcolor>
				<align>center</align>
				<label>FFx2</label>
				<visible>player.forwarding2x</visible>
			</control>

			<control type="label">
				<posx>0</posx>
				<posy>90</posy>
				<width>1920</width>
				<font>Large</font>
				<textcolor>Cyan</textcolor>
				<align>center</align>
				<label>FFx4</label>
				<visible>player.forwarding4x</visible>
			</control>

			<control type="label">
				<posx>0</posx>
				<posy>90</posy>
				<width>1920</width>
				<font>Large</font>
				<textcolor>Cyan</textcolor>
				<align>center</align>
				<label>FFx8</label>
				<visible>player.forwarding8x</visible>
			</control>

			<control type="label">
				<posx>0</posx>
				<posy>90</posy>
				<width>1920</width>
				<font>Large</font>
				<textcolor>Cyan</textcolor>
				<align>center</align>
				<label>FFx16</label>
				<visible>player.forwarding16x</visible>
			</control>

			<control type="label">
				<posx>0</posx>
				<posy>90</posy>
				<width>1920</width>
				<font>Large</font>
				<textcolor>Cyan</textcolor>
				<align>center</align>
				<label>FFx32</label>
				<visible>player.forwarding32x</visible>
			</control>

			<control type="label">
				<posx>0</posx>
				<posy>90</posy>
				<width>1920</width>
				<font>Large</font>
				<textcolor>Cyan</textcolor>
				<align>center</align>
				<label>RWx2</label>
				<visible>player.rewinding2x</visible>
			</control>

			<control type="label">
				<posx>0</posx>
				<posy>90</posy>
				<width>1920</width>
				<font>Large</font>
				<textcolor>Cyan</textcolor>
				<align>center</align>
				<label>RWx7</label>
				<visible>player.rewinding4x</visible>
			</control>

			<control type="label">
				<posx>0</posx>
				<posy>90</posy>
				<width>1920</width>
				<font>Large</font>
				<textcolor>Cyan</textcolor>
				<align>center</align>
				<label>RWx8</label>
				<visible>player.rewinding8x</visible>
			</control>

			<control type="label">
				<posx>0</posx>
				<posy>90</posy>
				<width>1920</width>
				<font>Large</font>
				<textcolor>Cyan</textcolor>
				<align>center</align>
				<label>RWx16</label>
				<visible>player.rewinding16x</visible>
			</control>

			<control type="label">
				<posx>0</posx>
				<posy>90</posy>
				<width>1920</width>
				<font>Large</font>
				<textcolor>Cyan</textcolor>
				<align>center</align>
				<label>RWx32</label>
				<visible>player.rewinding32x</visible>
			</control>
			
			<control type="label">
				<posx>1905</posx>
				<posy>15</posy>
				<width>1920</width>
				<align>right</align>
				<font>XXLarge</font>
				<textcolor>White</textcolor>
				<label>[UPPERCASE]$INFO[Player.Title][/UPPERCASE]</label>
			</control>
			
			<control type="label">
				<posx>15</posx>
				<posy>15</posy>
				<width>1680</width>
				<align>left</align>
				<font>XXLarge</font>
				<textcolor>White</textcolor>
				<label>[UPPERCASE]$INFO[VideoPlayer.TVShowTitle][/UPPERCASE]</label>
			</control>			

			<control type="progress" id="23">
				<description>Progress Bar</description>
				<posx>15</posx>
				<posy>80</posy>
				<width>1890</width>
				<info>Player.Progress</info>
				<texturebg border="1">other_textures/OSD/ProgressBack.png</texturebg>
				<midtexture border="1">other_textures/OSD/ProgressMid.png</midtexture>
				<visible>true</visible>
			</control>

			<control type="slider" id="401">
				<description>Seekbar</description>
				<posx>15</posx>
				<posy>85</posy>
				<width>1680</width>
				<visible>Player.Seeking</visible>
			</control>

		</control>	

	</controls>

</window>