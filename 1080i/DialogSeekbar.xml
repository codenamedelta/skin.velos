<?xml version="1.0" encoding="UTF-8"?>
<!-- Velos -->
<window id="115">
	<defaultcontrol always="true">901</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<visible>[Player.Seeking | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding | Window.IsVisible(videoosd)] + ![VideoPlayer.Content(livetv) | Window.IsVisible(fullscreeninfo)] + Window.IsVisible(fullscreenvideo)</visible>

	<controls>
	
		<!-- TOP BAR -->
		<control type="group">
			<posx>0</posx>
			<posy>0</posy>
			<animation effect="slide" start="0,-150" time="500">WindowOpen</animation>
			<animation effect="slide" end="0,-150" time="500">WindowClose</animation>

			<!-- BAR BACKGROUND COLOR -->
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>1920</width>
				<height>150</height>
				<texture border="22">other_textures/white-back.png</texture>
			</control>
			
			 <!--<control type="image">
                <posx>22</posx>
                <posy>746</posy>
                <width>345</width>
                <height>234</height>
                <texture background="true">$VAR[PlayerArtworkVar]</texture>
                <aspectratio aligny="bottom">keep</aspectratio>
            </control>-->
			
			<!-- TVSHOW POSTER -->
			<control type="image">
            	<posx>1615</posx>
                <posy>25</posy>
                <width>255</width>
				<height>350</height>
                <texture background="true">$VAR[PlayerPosterVar]</texture>
                <aspectratio aligny="bottom">stretch</aspectratio>
				<bordertexture>other_textures/borderwhite.png</bordertexture>
				<bordersize>10</bordersize>
                <visible>VideoPlayer.Content(movies) | VideoPlayer.Content(MusicVideos) | VideoPlayer.Content(episodes)</visible>
				<animation effect="slide" start="500,0" time="750">WindowOpen</animation>
				<animation effect="slide" end="0,-500" time="750">WindowClose</animation>
            </control>
			
			<!-- TIME AND DATE DISPLAY -->
			<include>TimeDate</include>	
			
		</control>

		<!-- BOTTOM BAR -->
		<control type="group">
			<posx>0</posx>
			<posy>880</posy>
			<animation effect="slide" start="0,200" time="500">WindowOpen</animation>
			<animation effect="slide" end="0,200" time="500">WindowClose</animation>
			
			<!-- BAR BACKGROUND COLOR -->
			<control type="image">
				<posx>0</posx>
				<posy>55</posy>
				<width>1920</width>
				<height>150</height>
				<texture border="22">other_textures/white-back.png</texture>
			</control>
			
			<control type="label">
				<posx>1905</posx>
				<posy>150</posy>
				<width>1920</width>
				<font>Large</font>
				<textcolor>Cyan</textcolor>
				<align>right</align>
				<label>$INFO[Player.Time]$INFO[Player.Duration, / ]</label>
			</control>

			<control type="label">
				<posx>0</posx> 
				<posy>150</posy>
				<width>1920</width>
				<font>Large</font>
				<textcolor>Cyan</textcolor>
				<align>center</align>
				<label>$LOCALIZE[31000] $INFO[Player.FinishTime]</label>
				<visible>!Player.Forwarding + !Player.Rewinding + !Player.Paused</visible>
			</control>

			<control type="label">
				<posx>0</posx>
				<posy>150</posy>
				<width>1920</width>
				<font>Large</font>
				<textcolor>Cyan</textcolor>
				<align>center</align>
				<label>[UPPERCASE]$LOCALIZE[112][/UPPERCASE]</label>
				<visible>player.paused</visible>
			</control>

			<control type="label">
