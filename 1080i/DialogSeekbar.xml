				<label>FFx32</label>
				<visible>player.forwarding32x</visible>
			</control>

			<control type="label">
				<posx>15</posx>
				<posy>100</posy>
				<width>1680</width>
				<align>center</align>
				<label>RWx2</label>
				<visible>player.rewinding2x</visible>
			</control>

			<control type="label">
