<?xml version="1.0" encoding="UTF-8"?>
<!-- Velos -->
<window id="115">
	<defaultcontrol always="true">901</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<visible>[Player.Seeking | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding | Window.IsVisible(videoosd)] + ![VideoPlayer.Content(livetv) | Window.IsVisible(fullscreeninfo)] + Window.IsVisible(fullscreenvideo)</visible>

	<controls>

		<control type="group">
			<posx>105</posx>
			<posy>930</posy>
			<animation effect="slide" start="0,100" time="250">WindowOpen</animation>
			<animation effect="slide" end="0,100" time="250">WindowClose</animation>

			<control type="image">
				<posx>-105</posx>
				<posy>55</posy>
				<width>1920</width>
				<height>100</height>
				<texture border="22">other_textures/white-back.png</texture>
			</control>

			<control type="label">
				<posx>1695</posx>
				<posy>100</posy>
				<width>1680</width>
				<align>right</align>
				<label>$INFO[Player.Time]$INFO[Player.Duration, / ]</label>
			</control>

			<control type="label">
				<posx>15</posx> 
				<posy>100</posy>
				<width>1680</width>
				<align>center</align>
				<label>$LOCALIZE[31000] $INFO[Player.FinishTime]</label>
				<visible>!Player.Forwarding + !Player.Rewinding + !Player.Paused</visible>
			</control>

			<control type="label">
				<posx>15</posx>
				<posy>100</posy>
				<width>1680</width>
				<textcolor>Cyan</textcolor>
				<align>center</align>
				<label>[UPPERCASE]$LOCALIZE[112][/UPPERCASE]</label>
				<visible>player.paused</visible>
			</control>

			<control type="label">
				<posx>15</posx>
				<posy>100</posy>
				<width>1680</width>
				<align>center</align>
				<label>FFx2</label>
				<visible>player.forwarding2x</visible>
			</control>

			<control type="label">
				<posx>15</posx>
				<posy>100</posy>
				<width>1680</width>
				<align>center</align>
				<label>FFx4</label>
				<visible>player.forwarding4x</visible>
			</control>

			<control type="label">
				<posx>15</posx>
				<posy>100</posy>
				<width>1680</width>
				<align>center</align>
