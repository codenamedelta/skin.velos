	<include name="TimeDate">
		<control type="group">
			<posx>1900</posx>
			<posy>3</posy>
			<visible>!Player.HasVideo</visible>
			<control type="group">
				<control type="label">
					<width>300</width>
					<font>Large</font>
					<textcolor>White</textcolor>
					<label>$INFO[System.Time(hh:mm)] [COLOR=Cyan]$LOCALIZE[40155][/COLOR] $INFO[Weather.Temperature]</label>
					<align>right</align>
					<visible>substring(system.time,AM,right)</visible>
				</control>
				<control type="label">
					<width>300</width>
					<font>Large</font>
					<textcolor>White</textcolor>
					<label>$INFO[System.Time(hh:mm)] $LOCALIZE[40156] [COLOR=Cyan]$INFO[Weather.Temperature][/COLOR]</label>
					<align>right</align>
					<visible>substring(system.time,PM,right)</visible>
				</control>
				<control type="label">
					<width>300</width>
					<font>Large</font>
					<textcolor>White</textcolor>
					<label>$INFO[System.Time(hh:mm)] $INFO[Weather.Temperature]</label>
					<align>right</align>
					<visible>![substring(system.time,PM,right) | substring(system.time,AM,right)]</visible>
				</control>
			</control>
			<control type="label">
				<posx>-2</posx>
				<posy>44</posy>
				<width>600</width>
				<font>Large</font>
				<textcolor>White</textcolor>
				<label>$INFO[System.Date(DDD)]$COMMA $INFO[System.Date(MMM d)]$COMMA $INFO[System.Date(YYYY)]</label>
				<align>right</align>
			</control>
		</control>
		<control type="group">
			<posx>15</posx>
			<posy>-5</posy>
			<visible>Player.HasVideo + Window.IsActive(seekbar)</visible>
			<control type="group">
				<control type="label">
					<width>300</width>
					<font>Large</font>
					<textcolor>Grey</textcolor>
					<label>$INFO[System.Time(hh:mm)] [COLOR=Cyan]$LOCALIZE[40155][/COLOR] $INFO[Weather.Temperature]</label>
					<align>left</align>
					<visible>substring(system.time,AM,right)</visible>
				</control>
				<control type="label">
					<width>300</width>
					<font>Large</font>
					<textcolor>Grey</textcolor>
					<label>$INFO[System.Time(hh:mm)] $LOCALIZE[40156] [COLOR=Cyan]$INFO[Weather.Temperature][/COLOR]</label>
					<align>left</align>
					<visible>substring(system.time,PM,right)</visible>
				</control>
				<control type="label">
					<width>300</width>
					<font>Large</font>
					<textcolor>Grey</textcolor>
					<label>$INFO[System.Time(hh:mm)] $INFO[Weather.Temperature]</label>
					<align>left</align>
					<visible>![substring(system.time,PM,right) | substring(system.time,AM,right)]</visible>
				</control>
			</control>
			<control type="label">
				<posx>-2</posx>
				<posy>44</posy>
				<width>300</width>
				<font>Large</font>
				<textcolor>Grey</textcolor>
				<label>$INFO[System.Date(MM/DD/YY)]</label>
				<align>left</align>
			</control>
		</control>
