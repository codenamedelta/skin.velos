<!-- Velos -->
<includes>

	<include name="View_50_List">
	
		<description>List View (id=50)</description>

		<control type="list" id="50">
			<posx>1275</posx>
			<posy>150</posy>
			<width>640</width>
			<height>807</height>
			<onleft>60</onleft>
			<onright>9000</onright>
			<onup>50</onup>
			<ondown>50</ondown>
			<pagecontrol>60</pagecontrol>
			<viewtype label="535">list</viewtype>
			<scrolltime>200</scrolltime>
			<animation type="Conditional" condition="ControlGroup(9000).HasFocus()">
				<effect type="fade" start="100" end="50" time="200" />
				<effect type="zoom" center="1290,540" start="100" end="90" time="200" />
			</animation>

			<itemlayout width="580" height="69">

				<control type="image">
					<width>560</width>
					<height>66</height>
				</control>

				<!-- LABEL OUTSIDE OF EPISODE VIEW -->
				<control type="label">
					<posx>30</posx>
					<width>560</width>
					<font>medium</font>
					<textcolor>Grey</textcolor>
					<scrollsuffix> - </scrollsuffix>
					<label>[UPPERCASE]$INFO[ListItem.Label][/UPPERCASE]</label>
					<visible>![Container.Content(episodes)]</visible>
				</control>
				
				<!-- WATCHED/UNWATCHED OVERLAY -->
				<control type="image">
					<posx>600</posx>
					<posy>8</posy>
					<width>50</width>
					<height>50</height>
					<aspectratio align="left" aligny="center">keep</aspectratio>
					<texture>$INFO[ListItem.Overlay]</texture>
					<bordersize>10</bordersize>
					<visible>[Container.Content(tvshows)] | [Container.Content(seasons)] | [Container.Content(episodes)] | [Container.Content(movies)]]</visible>
				</control>
				
				<!-- EPISODE NUMBER AND TITLE FORMAT -->
				<control type="label">
					<posx>30</posx>
					<width>560</width>
					<font>medium</font>
					<textcolor>Grey</textcolor>
					<label>[UPPERCASE]$INFO[ListItem.Title][/UPPERCASE]</label>
					<visible>[Container.Content(episodes)]</visible>
				</control>

			</itemlayout>

			<focusedlayout width="580" height="69">

				<control type="image">
					<width>560</width>
					<height>66</height>
					<animation effect="fade" start="100" end="50" condition="!Control.HasFocus(50)">Conditional</animation>
				</control>

				<!-- LABEL OUTSIDE OF EPISODE VIEW -->
				<control type="label">
					<posx>30</posx>
					<width>560</width>
					<font>medium</font>
					<textcolor>White</textcolor>
					<scrollsuffix>          </scrollsuffix>
					<label>[UPPERCASE]$INFO[ListItem.Label][/UPPERCASE]</label>
					<visible>![Container.Content(episodes)]</visible>
				</control>
				
				<!-- WATCHED/UNWATCHED OVERLAY -->
				<control type="image">
					<posx>600</posx>
					<posy>8</posy>
					<width>50</width>
					<height>50</height>
					<aspectratio align="left" aligny="center">keep</aspectratio>
					<texture>$INFO[ListItem.Overlay]</texture>
					<bordersize>10</bordersize>
					<!--<visible>!IsEmpty(ListItem.Thumb + [Container.Content(episodes)]</visible>-->
				</control>
				
				<!-- EPISODE NUMBER AND TITLE FORMAT -->
				<control type="label">
					<posx>30</posx>
					<width>560</width>
					<font>medium</font>
					<textcolor>White</textcolor>
					<scrollsuffix> - </scrollsuffix>
					<label>[UPPERCASE]$INFO[ListItem.Title][/UPPERCASE]</label>
					<visible>[Container.Content(episodes)]</visible>
				</control>				

			</focusedlayout>

